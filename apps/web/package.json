{
  "private": true,
  "name": "web",
  "version": "0.0.2",
  "scripts": {
    "dev": "svelte-kit dev",
    "build": "export VITE_BUILD_TIME=$(date +'%Y-%m-%dT%H:%M:%S%:z') && svelte-kit build",
    "package": "svelte-kit package",
    "preview": "svelte-kit preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "test": "jest",
    "test:watch": "jest --watch -u",
    "test:ci": "jest --ci",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@felte/validator-zod": "1.0.5",
    "@fontsource/karla": "4.5.5",
    "@iconify-json/carbon": "1.1.3",
    "@sveltejs/adapter-vercel": "next",
    "@sveltejs/kit": "next",
    "@typescript-eslint/eslint-plugin": "5.19.0",
    "@typescript-eslint/parser": "5.19.0",
    "chinese-numbering": "1.0.0",
    "copy-text-to-clipboard": "3.0.1",
    "eslint": "8.13.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-svelte3": "3.4.1",
    "felte": "1.1.5",
    "jest": "27.5.1",
    "lint-staged": "12.3.7",
    "mdsvex": "0.10.5",
    "modern-css-reset": "1.4.0",
    "node-sass": "7.0.1",
    "prettier": "2.6.2",
    "prettier-plugin-svelte": "2.7.0",
    "sass": "1.50.0",
    "svelte": "3.47.0",
    "svelte-action-type": "github:winston0410/svelte-action-type",
    "svelte-check": "2.6.0",
    "svelte-notifications": "0.9.93",
    "svelte-preprocess": "4.10.5",
    "svelte-use-local-storage": "github:winston0410/svelte-use-local-storage",
    "ts-jest": "27.1.4",
    "tslib": "2.3.1",
    "typescript": "4.6.3",
    "unplugin-icons": "0.14.1",
    "vite-imagetools": "4.0.3",
    "zod": "3.14.4"
  },
  "type": "module",
  "dependencies": {
    "html-minifier-terser": "^7.0.0-alpha.2",
    "just-detect-adblock": "1.1.0",
    "jyutping-helpers": "file:packages/jyutping-helpers"
  }
